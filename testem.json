{
    "framework": "mocha+chai",
    "src_files": [
        "test/vendor/jquery.min.js",
        "test/vendor/sinon.js",
        "test/vendor/sinon-chai.js",
        "test/helper/*.js",
        "src/*.js",
        "test/*.js"
    ],

    "before_tests": "./node_modules/.bin/coffee -c ./test/helper/*.coffee ./test/*.coffee",
    "after_tests": "rm ./test/helper/*.js ./test/*.js",
    "launch_in_dev": [
        "Chrome"
    ]
}
